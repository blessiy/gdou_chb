<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/order_detail_order_name"
        android:text="商家名 :"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View

        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/order_detail_address"
        android:text="收货地址 :"
        android:textSize="20sp"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_detail_userName"
        android:text="收货人 :"
        android:textSize="20sp"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_detail_phone"
        android:text="收货联系方式 :"
        android:textSize="20sp"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#0f000000"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_detail_goods"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/order_detail_totle"
            android:text="总结 :"
            android:textSize="16sp"
            android:gravity="center|right"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/order_detail_goods"
            android:layout_height="50dp"
            android:layout_width="match_parent"/>


</LinearLayout>